# vim:ft=conkyrc:
# set to yes if you want conky to be forked in the background
background no

# Use Xft?
use_xft yes

# Print everything to stdout?
out_to_console no

mpd_host localhost
mpd_port 6600

# Xft font when Xft is enabled
xftfont DejaVu Sans Mono:size=10

# Text alpha when using Xft
xftalpha 0.5

# Update interval in seconds
update_interval 5.0

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Create own window instead of using desktop
own_window no
own_window_transparent no
own_window_colour 1a1c20

# available hints:
# undecorated below above sticky skip_taskbar skip_pager
own_window_hints below,undecorated,sticky,skip_taskbar,skip_pager

# possible types:
# normal desktop dock panel override
own_window_type normal

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 1090 136

# Draw various things?
draw_shades no
draw_outline no
draw_borders no

# Stippled borders?
stippled_borders 8

border_inner_margin 1
border_outer_margin 0

# Default colors and also border colors
default_color 98a0aa
default_shade_color black
default_outline_color black

# Text alignment
# (top|bottom)_(left|right)
alignment bottom_right

# Gap between borders of screen and text
# same thing as passing -x at command line
gap_x 6
gap_y 6

# Subtract file system buffers from used memory?
no_buffers yes

# set to yes if you want all text to be in uppercase
uppercase no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# number of net samples to average
# set to 1 to disable averaging
net_avg_samples 8

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

# Add spaces to keep things from moving about?  This only affects certain objects.
use_spacer left

# Percentages must be this many places
pad_percents 3

template0 \1: ${fs_used \2}/${fs_size \2}
template1 ${top name \1} ${top cpu \1}
template2 ${top_mem name \1} ${top_mem mem \1}

# The offsets on the left are for album art.
# The offset next to the ${mpd_artist} is needed to make everything align
# properly. It's not needed for the album or the track name because those have
# equal width things aligned on the right, but the artist has more stuff on the
# right that the offset counteracts.
TEXT
${offset 140}${alignc} ${offset 28}${mpd_artist} ${alignr 5}CPU: ${cpu}% ${cpubar 7,160}
${offset 140}${alignc} ${mpd_album} ${alignr 5}${template1 1}
${offset 140}${alignc} ${mpd_track}: ${mpd_title 70} ${alignr 5}${template1 2}
${offset 140}${mpd_status} [${mpd_elapsed}/${mpd_length}]${offset 60}Rand/Repeat: ${mpd_random}/${mpd_repeat}${offset 60}Vol: ${mpd_vol}%${offset 60}Bitrate: ${mpd_bitrate}kbps${alignr 5}${template1 3}
${offset 140}${mpd_bar 7,700}${alignr 5}RAM: ${memperc}% ${membar 7,160}
${offset 140}${template0 / /}${offset 50}${template0 home /home}${offset 50}${template0 music /mnt/music}${alignr 5}${template2 1}
${offset 140}${fs_bar 3,143 /}${offset 52}${fs_bar 3,165 /home}${offset 52}${fs_bar 3,175 /mnt/music}${alignr 5}${template2 2}
${offset 140}${alignc}${time %a %x %H:%M:%S}${image ~/.cache/cur.jpg -p 2,2 -s 132x132 -n} ${exec conkycover}${alignr 5}${template2 3}
